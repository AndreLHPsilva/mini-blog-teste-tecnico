{
  "compilerOptions": {
    "target": "es2021", 
    "lib": [
      "ESNext.BigInt",
      "ES2021"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "./config/*",
      ],
      "@errors/*": [
        "./errors/*",
      ],
      "@models/*": [
        "./models/*",
      ],
      "@modules/*": [
        "./modules/*",
      ],
      "@database/*": [
        "./database/*",
      ],
      "@routes/*": [
        "./routes/*",
      ],
      "@middlewares/*": [
        "./middlewares/*",
      ],
      "@swagger/*": [
        "./swagger/*",
      ],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
